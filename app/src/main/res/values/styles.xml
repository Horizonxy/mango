<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_f6f6f7</item>
        <item name="colorPrimaryDark">@color/color_f6f6f7</item>
        <item name="colorAccent">@color/color_f6f6f7</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="important_corners_btn">
        <item name="android:layout_height">@dimen/dp_42</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/important_btn_text_color_selector</item>
        <item name="android:background">@drawable/important_corners_btn_bg_selector</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="lesser_corners_btn">
        <item name="android:layout_height">@dimen/dp_42</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/lesser_btn_text_color_selector</item>
        <item name="android:background">@drawable/lesser_corners_btn_bg_selector</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="rect_btn">
        <item name="android:layout_height">@dimen/dp_42</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/important_btn_text_color_selector</item>
        <item name="android:background">@drawable/rect_btn_bg_selector</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="horizontal_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_0.5</item>
        <item name="android:background">@color/color_cccccc</item>
    </style>

    <style name="vertical_line">
        <item name="android:layout_width">@dimen/dp_0.5</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_cccccc</item>
    </style>

</resources>
