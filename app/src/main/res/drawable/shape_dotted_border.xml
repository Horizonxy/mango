            <!-- 虚线 -->
            <stroke android:width="1dp" android:color="@color/color_333333" android:dashGap="4dp" android:dashWidth="4dp" />

            <solid android:color="@color/color_efeff4" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <!-- 虚线 -->
