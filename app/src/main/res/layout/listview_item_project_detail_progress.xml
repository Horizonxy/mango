<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_14" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">

            <View
                android:id="@+id/v_left"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_3"
                android:layout_weight="1"
                android:background="@color/color_ffb900" />

            <View
                android:id="@+id/v_right"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_3"
                android:layout_weight="1"
                android:background="@color/color_ffb900" />
        </LinearLayout>

        <cn.com.mangopi.android.ui.widget.RedPointView xmlns:point="http://schemas.android.com/apk/res-auto"
            android:id="@+id/v_point"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_gravity="center"
            point:point_color="@color/color_ffb900"
            point:radius="@dimen/dp_6" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_14" />


</LinearLayout>