<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_update_role"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:background="@color/color_ffb900"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/iv_bottom_del"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/dele_white"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"/>

        <Button
            android:id="@+id/btn_update_info"
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:minWidth="0dp"
            android:paddingLeft="@dimen/dp_6"
            android:paddingRight="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_bottom_del"
            android:background="@drawable/selector_black_border_corners"
            android:text="马上升级"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="升级您的身份，享受更多专业服务"
            android:textColor="@color/color_333333"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_14"
            android:layout_toLeftOf="@id/btn_update_info"
            android:singleLine="true"
            android:ellipsize="end"/>
    </RelativeLayout>

    <com.mango.ui.widget.ObservableScrollView
        android:id="@+id/sv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_above="@id/layout_update_role"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_efeff4"
            android:orientation="vertical">

            <com.bigkoo.convenientbanner.ConvenientBanner xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/home_banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_180"
                app:canLoop="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/dp_31"
                    android:layout_height="@dimen/dp_31"
                    android:layout_marginBottom="@dimen/dp_6"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_6"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_gonggao" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="10dp"
                    android:background="@color/color_efeff4" />

                <com.mango.ui.widget.VerticalTextview
                    android:id="@+id/tv_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@android:color/white">

                <com.mango.ui.widget.ViewPagerFixed
                    android:id="@+id/home_pager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_120" />

               <!-- <net.lucode.hackware.magicindicator.MagicIndicator
                    android:id="@+id/home_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_5"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="@dimen/dp_16" />-->

                <LinearLayout
                    android:id="@+id/home_indicator"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_height="wrap_content"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@android:color/white"
                android:paddingBottom="@dimen/dp_20">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_70"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_gongzuobao" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_70"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_kecheng" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_20"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_20">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="@dimen/dp_4"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/dp_2"
                            android:layout_marginTop="@dimen/dp_2"
                            android:background="@color/color_ffb900" />

                        <TextView
                            android:id="@+id/tv_title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_4"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/sp_16" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_intro1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_advert1"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/shape_dotted_line"
                    android:layerType="software" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical">


                        <View
                            android:layout_width="@dimen/dp_4"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/dp_2"
                            android:layout_marginTop="@dimen/dp_2"
                            android:background="@color/color_ffb900" />

                        <TextView
                            android:id="@+id/tv_title2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_4"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/sp_16" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_intro2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_70"
                    android:layout_marginTop="@dimen/dp_10"
                    android:scrollbars="none">
                    <LinearLayout
                        android:id="@+id/layout_advert2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@drawable/shape_vertical_trans_line"
                        android:showDividers="middle"
                        android:orientation="horizontal"/>
                </HorizontalScrollView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_20"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_20">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="@dimen/dp_4"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dp_2"
                        android:layout_marginTop="@dimen/dp_2"
                        android:background="@color/color_ffb900" />

                    <TextView
                        android:id="@+id/tv_title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_advert3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_240"
                    android:layout_marginTop="@dimen/dp_10"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

            </LinearLayout>

            <include layout="@layout/layout_bottom_concern" />

        </LinearLayout>

    </com.mango.ui.widget.ObservableScrollView>

    <include
        layout="@layout/layout_tab_home_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>
