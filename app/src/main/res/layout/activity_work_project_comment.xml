<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_tutor_comment_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="导师点评："
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_tutor_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_16" />

        <View
            android:id="@+id/line_tutor_comment"
            style="@style/horizontal_line"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="企业点评："
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作品得分："
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_16" />

            <LinearLayout
                android:id="@+id/layout_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_4"
                android:paddingLeft="@dimen/dp_20"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@drawable/shape_bg_corners_border"
                android:paddingTop="@dimen/dp_4">

                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:adjustViewBounds="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:src="@drawable/more_black"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="注意：评分作为名次的评价标准，但不会公开显示出来"
            android:textColor="@color/color_ff0030"
            android:layout_marginTop="@dimen/dp_10"/>

        <View
            style="@style/horizontal_line"
            android:layout_marginTop="@dimen/dp_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="点评内容："
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_180"
            android:gravity="left|top"
            android:layout_marginTop="@dimen/dp_10"
            android:padding="@dimen/dp_10"
            android:maxLength="100"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_14"
            android:hint="请企业代表从[产品理解程度]、[专业能力]、[创新能力]、[市场应用性]四个维度展开考量，最后填入综合分数。"
            android:background="@drawable/shape_bg_corners_border"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15">

            <TextView
                android:id="@+id/tv_content_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_666666"/>

            <Button
                android:id="@+id/btn_submit_comment"
                android:layout_width="wrap_content"
                style="@style/important_corners_btn"
                android:layout_height="@dimen/dp_35"
                android:paddingLeft="@dimen/dp_24"
                android:paddingRight="@dimen/dp_24"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:textSize="@dimen/sp_14"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/dp_2"
                android:text="提交"/>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>
