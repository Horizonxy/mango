<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_efeff4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FC5D53">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="36sp"
                android:text="-"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:padding="@dimen/dp_49"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/dp_35"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_f2f2f2"
                        android:textSize="@dimen/sp_16"
                        android:text="@string/usable_limit"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_f2f2f2"
                        android:textSize="@dimen/sp_16"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="-"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/dp_35"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_f2f2f2"
                        android:textSize="@dimen/sp_16"
                        android:text="@string/blocked_limit"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_f2f2f2"
                        android:textSize="@dimen/sp_16"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="-"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <include
            android:id="@+id/layout_card"
            layout="@layout/layout_item_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_0.5" />

        <include
            android:id="@+id/layout_cash"
            layout="@layout/layout_item_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_0.5" />

        <include
            android:id="@+id/layout_detail"
            layout="@layout/layout_item_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_0.5" />

    </LinearLayout>
</ScrollView>