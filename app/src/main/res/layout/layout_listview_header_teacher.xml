<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content">

    <com.bigkoo.convenientbanner.ConvenientBanner xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/course_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_375"
        app:canLoop="true" />
    
    <cn.com.mangopi.android.ui.widget.GridView
        android:id="@+id/gv_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:numColumns="4"
        android:cacheColorHint="@android:color/transparent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10">
        <View
            android:layout_width="@dimen/dp_4"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_2"
            android:background="@color/color_ffb900" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:text="课程推荐"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

    <View
        style="@style/horizontal_line"
        android:layout_marginTop="@dimen/dp_2"/>
</LinearLayout>