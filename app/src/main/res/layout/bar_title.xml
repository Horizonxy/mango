<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_49"
    android:background="@color/color_f6f6f7">

    <ImageButton
        android:id="@+id/ib_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        style="@style/repple_in_backguound"
        android:paddingBottom="@dimen/dp_11.5"
        android:paddingTop="@dimen/dp_11.5"
        android:paddingRight="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_15"/>

    <TextView
        android:id="@+id/tv_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_16"
        android:ellipsize="end"
        android:singleLine="true"
        android:visibility="gone"
        android:layout_toRightOf="@+id/ib_left"/>

    <TextView
        android:id="@+id/tv_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        style="@style/repple_in_backguound"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_11.5"
        android:paddingTop="@dimen/dp_11.5"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/ib_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        style="@style/repple_in_backguound"
        android:paddingBottom="@dimen/dp_11.5"
        android:paddingTop="@dimen/dp_11.5"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/ib_second_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/ib_right"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        style="@style/repple_in_backguound"
        android:paddingBottom="@dimen/dp_11.5"
        android:paddingTop="@dimen/dp_11.5"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_16"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_centerInParent="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_alignParentBottom="true"
        android:background="@color/color_cccccc"/>
</RelativeLayout>