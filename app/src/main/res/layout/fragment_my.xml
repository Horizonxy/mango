<cn.com.mangopi.android.ui.widget.MangoPtrFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    cube_ptr:ptr_duration_to_close="200"
    cube_ptr:ptr_duration_to_close_header="700"
    cube_ptr:ptr_keep_header_when_refresh="true"
    cube_ptr:ptr_pull_to_fresh="false"
    cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
    cube_ptr:ptr_resistance="1.8">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_efeff4"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_180"
                    android:background="@color/color_ffb900" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_49"
                    android:background="@drawable/shape_bg_dialog"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_nick_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_49"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/tv_update_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_5"
                        android:drawableRight="@drawable/more_black"
                        android:gravity="center_vertical"
                        android:text="@string/update_profile_info"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_12" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10">

                        <LinearLayout
                            android:id="@+id/layout_fav"
                            style="@style/repple_out_backguound"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dp_22"
                                android:layout_height="@dimen/dp_22"
                                android:adjustViewBounds="true"
                                android:scaleType="centerInside"
                                android:src="@drawable/icon_shoucang" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_4"
                                android:text="收藏"
                                android:textColor="@color/color_666666"
                                android:textSize="@dimen/sp_12" />

                            <TextView
                                android:id="@+id/tv_collection_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_8"
                                android:textColor="@color/color_000000"
                                android:textSize="@dimen/sp_18" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_message"
                            style="@style/repple_out_backguound"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dp_22"
                                android:layout_height="@dimen/dp_22"
                                android:adjustViewBounds="true"
                                android:scaleType="centerInside"
                                android:src="@drawable/icon_xiaoxi" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_4"
                                android:text="消息"
                                android:textColor="@color/color_666666"
                                android:textSize="@dimen/sp_12" />

                            <TextView
                                android:id="@+id/tv_msg_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_8"
                                android:textColor="@color/color_000000"
                                android:textSize="@dimen/sp_18" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_trend"
                            style="@style/repple_out_backguound"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dp_22"
                                android:layout_height="@dimen/dp_22"
                                android:adjustViewBounds="true"
                                android:scaleType="centerInside"
                                android:src="@drawable/icon_dongtai" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_4"
                                android:text="动态"
                                android:textColor="@color/color_666666"
                                android:textSize="@dimen/sp_12" />

                            <TextView
                                android:id="@+id/tv_trend_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_8"
                                android:textColor="@color/color_000000"
                                android:textSize="@dimen/sp_18" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <cn.com.mangopi.android.ui.widget.RoundImageView xmlns:round="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/iv_avatar"
                    android:layout_width="@dimen/dp_84"
                    android:layout_height="@dimen/dp_84"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_7"
                    android:src="@drawable/user_pic1"
                    round:border_color="@android:color/white"
                    round:border_overlay="true"
                    round:border_width="@dimen/dp_2" />

                <!--<ImageView
                    android:layout_width="@dimen/dp_84"
                    android:layout_height="@dimen/dp_84"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_7"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_launcher_round" />-->

            </FrameLayout>

            <include
                android:id="@+id/layout_role"
                layout="@layout/layout_item_profile" />

            <include
                android:id="@+id/layout_order_list"
                layout="@layout/layout_item_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_0.5" />

            <include
                android:id="@+id/layout_works"
                layout="@layout/layout_item_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_0.5" />

            <include
                android:id="@+id/layout_classes"
                layout="@layout/layout_item_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_0.5" />

            <include
                android:id="@+id/layout_account"
                layout="@layout/layout_item_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_0.5" />

            <include
                android:id="@+id/layout_coupon"
                layout="@layout/layout_item_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_0.5" />

            <include
                android:id="@+id/layout_setting"
                layout="@layout/layout_item_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10" />

        </LinearLayout>
    </ScrollView>
</cn.com.mangopi.android.ui.widget.MangoPtrFrameLayout>