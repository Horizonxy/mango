<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_reward"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_70"
            android:textColor="@color/color_333333"
            android:background="@color/color_ffb900"
            android:textSize="@dimen/sp_18"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_efeff4"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_actor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_16"
                android:singleLine="true"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/tv_member_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_666666"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/sp_14"/>
        </LinearLayout>
    </LinearLayout>

    <cn.com.mangopi.android.ui.widget.ListView
        android:id="@+id/lv_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <include
        android:id="@+id/layout_empty"
        android:visibility="gone"
        layout="@layout/layout_nodata_in_content" />
    <TextView
        android:id="@+id/tv_other_doc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center_horizontal"
        android:textColor="@color/color_333333"
        android:text="查看其他文档"
        android:visibility="visible"
        android:textSize="@dimen/sp_16" />

    <View
        android:id="@+id/line_tutor_comment"
        style="@style/horizontal_line"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_15" />

    <TextView
        android:id="@+id/tv_tutor_comment_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:text="导师点评："
        android:textColor="@color/color_333333"/>

    <TextView
        android:id="@+id/tv_tutor_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_14"
        android:visibility="gone"/>

    <View
        android:id="@+id/line_company_comment"
        style="@style/horizontal_line"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_15" />

    <TextView
        android:id="@+id/tv_company_comment_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:text="企业点评："
        android:visibility="gone"
        android:textColor="@color/color_333333"/>

    <TextView
        android:id="@+id/tv_company_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_14"
        android:visibility="gone"/>

</LinearLayout>