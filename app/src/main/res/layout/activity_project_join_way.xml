<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_bg_corners_border"
        android:padding="@dimen/dp_15"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="如果你有团队的集结号，直接加入："
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15">
            <TextView
                android:id="@+id/tv_chiper_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_666666"
                android:layout_centerVertical="true"
                android:text="集结号："
                android:textSize="@dimen/sp_14"/>

            <Button
                android:id="@+id/btn_join_with_chiper"
                style="@style/important_corners_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dp_2"
                android:textSize="@dimen/sp_14"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:text="直接加入" />

            <EditText
                android:id="@+id/et_chiper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/color_333333"
                android:background="@null"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_6"
                android:textSize="@dimen/sp_14"
                android:textColorHint="@color/color_999999"
                android:hint="请输入4位集结号"
                android:layout_toLeftOf="@id/btn_join_with_chiper"
                android:layout_toRightOf="@id/tv_chiper_tip"/>
        </RelativeLayout>

        <View
            style="@style/horizontal_line"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="如果没有团队的集结号，但是我想加入："
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15">
            <TextView
                android:id="@+id/tv_desc_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_666666"
                android:layout_centerVertical="true"
                android:text="自我介绍："
                android:textSize="@dimen/sp_14"/>

            <Button
                android:id="@+id/btn_join_with_desc"
                style="@style/important_corners_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dp_2"
                android:textSize="@dimen/sp_14"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:text="申请加入" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/color_333333"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_6"
                android:background="@null"
                android:textSize="@dimen/sp_14"
                android:textColorHint="@color/color_999999"
                android:hint="请介绍自己的特长、留下个人的联系方式（手机号、QQ号）"
                android:layout_toLeftOf="@id/btn_join_with_desc"
                android:layout_toRightOf="@id/tv_desc_tip"/>
        </RelativeLayout>



    </LinearLayout>

</ScrollView>
