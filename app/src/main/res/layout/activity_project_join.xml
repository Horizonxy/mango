<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_15"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16" />

        <View
            style="@style/horizontal_line"
            android:layout_marginTop="@dimen/dp_15" />

        <RadioGroup
            android:id="@+id/rg_join_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_member"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/shape_radio_button"
                android:text="个人"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_14" />

            <RadioButton
                android:id="@+id/rb_new_team"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/shape_radio_button"
                android:text="我来组团队"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_14" />

            <RadioButton
                android:id="@+id/rb_team"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/shape_radio_button"
                android:text="加入已有团队"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_14" />
        </RadioGroup>

        <LinearLayout
            android:id="@+id/layout_new_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:visibility="gone"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="团队名称"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/dp_14" />
                <include layout="@layout/layout_star_code" />

                <EditText
                    android:id="@+id/et_team_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:gravity="right|center_vertical"
                    android:hint="起一个响亮好听的团队名字"
                    android:singleLine="true"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_cccccc"
                    android:textSize="@dimen/dp_14" />

            </LinearLayout>

            <View style="@style/horizontal_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="本人角色："
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/dp_14" />

                <EditText
                    android:id="@+id/et_member_role"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:gravity="right|center_vertical"
                    android:hint="填写本人在团队中扮演的角色"
                    android:singleLine="true"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_cccccc"
                    android:textSize="@dimen/dp_14" />
            </LinearLayout>

            <View style="@style/horizontal_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="集结暗号"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/dp_14" />
                <include layout="@layout/layout_star_code" />

                <EditText
                    android:id="@+id/et_team_cipher"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:maxLength="4"
                    android:inputType="number"
                    android:gravity="right|center_vertical"
                    android:hint="输入一个4位数字作为其他成员入团口令"
                    android:singleLine="true"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_cccccc"
                    android:textSize="@dimen/dp_14" />

            </LinearLayout>

            <View style="@style/horizontal_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="公告："
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/dp_14" />

                <EditText
                    android:id="@+id/et_team_bulletin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:gravity="right|center_vertical"
                    android:hint="团队公告（公开），报名后可修改"
                    android:singleLine="true"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_cccccc"
                    android:textSize="@dimen/dp_14" />

            </LinearLayout>

        </LinearLayout>

        <cn.com.mangopi.android.ui.widget.ListView
            android:id="@+id/lv_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:scrollbars="none"
            android:divider="@android:color/transparent"/>

        <Button
            android:id="@+id/btn_join"
            android:layout_width="match_parent"
            style="@style/important_corners_btn"
            android:layout_margin="@dimen/dp_15"
            android:text="报名"/>
    </LinearLayout>

</ScrollView>
