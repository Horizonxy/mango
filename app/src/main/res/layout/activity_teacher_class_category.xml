<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_efeff4">

    <LinearLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_31"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/dp_15"
        android:background="@drawable/shape_bg_corners_main_color">

        <ImageView
            android:id="@+id/iv_tab_search"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_20"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/sousuo" />

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_5"
            android:gravity="center"
            android:text="输入关键字,找到您需要的工作包或导师"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="@dimen/dp_20"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

    <ListView
        android:id="@+id/lv_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_search"
        android:divider="@color/color_efeff4"
        android:dividerHeight="@dimen/dp_10"
        android:cacheColorHint="@android:color/transparent"/>
</RelativeLayout>
