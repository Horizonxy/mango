<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_home_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_49"
    android:background="@color/color_ffb900">

    <ImageButton
        android:id="@+id/ib_scan"
        style="@style/repple_in_backguound"
        android:layout_width="@dimen/dp_49"
        android:layout_height="@dimen/dp_49"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/home_saoma" />

    <FrameLayout
        android:id="@+id/layout_msg"
        android:layout_width="@dimen/dp_49"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <ImageButton
            style="@style/repple_in_backguound"
            android:layout_width="@dimen/dp_49"
            android:layout_height="@dimen/dp_49"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/home_xiaoxi" />
        <com.mango.ui.widget.RedPointView
            android:layout_gravity="right|top"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8" />
    </FrameLayout>


    <RelativeLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_31"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@drawable/shape_bg_rect_tab_search"
        android:layout_toRightOf="@id/ib_scan"
        android:layout_toLeftOf="@id/layout_msg">

        <ImageView
            android:id="@+id/iv_tab_search"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/sousuo"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"/>
        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:textColor="@color/color_999999"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:text="输入关键字"/>

    </RelativeLayout>

</RelativeLayout>