<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_dialog">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_31"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_31"
        android:gravity="center"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_15" />

    <LinearLayout
        android:id="@+id/layout_progress"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_bu"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/dp_6"
            android:paddingLeft="@dimen/dp_4"
            android:paddingRight="@dimen/dp_4"
            android:layout_marginLeft="39dp"
            android:paddingTop="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进度  "
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_14" />

                <ProgressBar
                    android:id="@+id/progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_4"
                    android:max="100"
                    android:progressDrawable="@drawable/progress_indeterminate_horizontal"
                    android:secondaryProgress="100" />

        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/horizontal_line"
        android:layout_marginTop="@dimen/dp_31"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_44"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_333333"
            android:gravity="center"/>

        <View
            android:id="@+id/line_func"
            style="@style/vertical_line" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_44"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_ffb900"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_cancel_update"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_44"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_ffb900"
            android:gravity="center"/>


    </LinearLayout>

</LinearLayout>