<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_pay"
        style="@style/important_corners_btn"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:text="@string/place_order_to_pay"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_16" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_pay"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp_15">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15">
                <TextView
                    android:id="@+id/tv_order_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_alignParentRight="true"
                    android:text="x 1"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_666666"/>
                <TextView
                    android:id="@+id/tv_course_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="标题"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_toLeftOf="@id/tv_order_count"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_333333"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15">
                <TextView
                    android:id="@+id/tv_sale_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_alignParentRight="true"
                    android:text="9.9"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_000000"/>
                <TextView
                    android:id="@+id/tv_member_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="名字"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@id/tv_price"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_666666"/>
            </RelativeLayout>

            <View
                style="@style/horizontal_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15">
                <Button
                    android:id="@+id/btn_use"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_35"
                    android:padding="@dimen/dp_10"
                    style="@style/lesser_corners_btn"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="@string/use"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:layout_toLeftOf="@id/btn_use"
                    android:gravity="center_vertical|right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="优惠码："
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/color_666666"/>
                    <EditText
                        android:layout_width="@dimen/dp_140"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:background="@drawable/shape_bg_corners_border"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_16"/>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="派号：123123213，享八折优惠"/>

            <View
                style="@style/horizontal_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_gravity="center_vertical|right">

                <TextView
                    android:id="@+id/tv_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_16"
                   android:layout_alignParentRight="true"
                    android:textColor="@color/color_333333"
                    android:text="99"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_16"
                    android:layout_toLeftOf="@id/tv_total_price"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_gravity="right"
                    android:textColor="@color/color_666666"
                    android:text="总计："/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
