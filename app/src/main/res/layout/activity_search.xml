<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:background="@color/color_ffb900">

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16"
            android:ellipsize="end"
            android:text="取消"
            android:singleLine="true"
            android:paddingRight="@dimen/dp_15"
            style="@style/repple_out_backguound"
            android:layout_alignParentRight="true"/>

        <RelativeLayout
            android:id="@+id/layout_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_31"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_bg_rect_tab_search"
            android:layout_toLeftOf="@id/tv_right">

            <ImageView
                android:id="@+id/iv_tab_search"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:src="@drawable/sousuo"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"/>
            <TextView
                android:id="@+id/tv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="@color/color_999999"
                android:layout_toRightOf="@id/iv_tab_search"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textSize="@dimen/sp_12"
                android:text="输入您需要的工作包或导师"/>

        </RelativeLayout>
    </RelativeLayout>

    <include layout="@layout/layout_pull_listview" />
</LinearLayout>
