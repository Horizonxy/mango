<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160"
            android:layout_margin="@dimen/dp_15"
            android:padding="@dimen/dp_10"
            android:hint="@string/please_input_something"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_cccccc"
            android:textCursorDrawable="@drawable/shape_color_cursor"
            android:textSize="@dimen/dp_14"
            android:maxLength="100"
            android:gravity="top|left"
            android:background="@drawable/shape_bg_rect_border" />

        <TextView
            android:id="@+id/tv_content_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:text="@string/input_num"
            android:gravity="right"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/dp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_15"
            android:layout_margin="@dimen/dp_15"
            android:background="@color/color_efeff4">

            <cn.com.mangopi.android.ui.widget.RoundImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_15">
                <TextView
                    android:id="@+id/tv_trend_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_16"
                    android:singleLine="true"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tv_trend_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_14"
                    android:maxLines="2"
                    android:ellipsize="end"/>
            </LinearLayout>

        </LinearLayout>
        
    </LinearLayout>
</ScrollView>
