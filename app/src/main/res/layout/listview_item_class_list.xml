<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_state"
        android:layout_width="@dimen/dp_22"
        android:layout_height="@dimen/dp_22"
        android:adjustViewBounds="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_course_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="@string/rmb"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_type_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_price"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

        <View style="@style/horizontal_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="right">

            <Button
                android:id="@+id/btn_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_btn_bg_lesser_corners"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingBottom="@dimen/dp_8"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:paddingTop="@dimen/dp_8"
                android:text="删除"
                android:textColor="@drawable/selector_text_color_lesser_btn"
                android:textSize="@dimen/sp_14" />

            <Button
                android:id="@+id/btn_function"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@drawable/selector_btn_bg_lesser_corners"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingBottom="@dimen/dp_8"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:paddingTop="@dimen/dp_8"
                android:text="下架"
                android:textColor="@drawable/selector_text_color_lesser_btn"
                android:textSize="@dimen/sp_14"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@drawable/selector_btn_bg_lesser_corners"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingBottom="@dimen/dp_8"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:paddingTop="@dimen/dp_8"
                android:text="上架"
                android:textColor="@drawable/selector_text_color_lesser_btn"
                android:textSize="@dimen/sp_14"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/v_divider_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/color_efeff4" />
</LinearLayout>