<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_efeff4"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/society_info"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_666666"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white">

            <LinearLayout
                android:id="@+id/layout_avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_15"
                    android:text="头像："
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/dp_14" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:background="@android:color/transparent"
                        android:ellipsize="end"
                        android:gravity="right|center_vertical"
                        android:hint="点击上传图片或拍照"
                        android:singleLine="true"
                        android:visibility="visible"
                        android:textColor="@color/color_333333"
                        android:textColorHint="@color/color_cccccc"
                        android:textSize="@dimen/dp_14" />

                    <cn.com.mangopi.android.ui.widget.RoundImageView
                        android:id="@+id/iv_avatar"
                        xmlns:round="http://schemas.android.com/apk/res-auto"
                        round:border_overlay="true"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:visibility="gone"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_7"/>
                </RelativeLayout>

                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:visibility="visible"
                    android:layout_marginRight="@dimen/dp_15"
                    android:scaleType="centerInside"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:src="@drawable/icon_more" />
            </LinearLayout>

            <View
                style="@style/margin_horizontal_line" />

            <include
                android:id="@+id/layout_nick_name"
                layout="@layout/layout_item_setting" />

            <View
                style="@style/margin_horizontal_line" />

            <include
                android:id="@+id/layout_sign"
                layout="@layout/layout_item_setting" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="@string/basic_info"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_666666"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white">

            <include
                android:id="@+id/layout_real_name"
                layout="@layout/layout_item_setting" />

            <View
                style="@style/margin_horizontal_line" />

            <include
                android:id="@+id/layout_gender"
                layout="@layout/layout_item_setting" />

            <View
                style="@style/margin_horizontal_line" />

            <include
                android:id="@+id/layout_birthday"
                layout="@layout/layout_item_setting" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="@string/school_info"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_666666"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white">

            <include
                android:id="@+id/layout_school"
                layout="@layout/layout_item_setting" />

            <View
                style="@style/margin_horizontal_line" />

            <include
                android:id="@+id/layout_professional"
                layout="@layout/layout_item_setting" />

            <View
                style="@style/margin_horizontal_line" />

            <include
                android:id="@+id/layout_enter_date"
                layout="@layout/layout_item_setting" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="@string/about_CV"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_666666"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white">

            <include
                android:id="@+id/layout_project"
                layout="@layout/layout_item_setting" />

            <View
                style="@style/margin_horizontal_line" />

            <include
                android:id="@+id/layout_works"
                layout="@layout/layout_item_setting" />

            <View
                style="@style/margin_horizontal_line" />

            <include
                android:id="@+id/layout_cv"
                layout="@layout/layout_item_setting" />

            <View
                style="@style/margin_horizontal_line" />

            <include
                android:id="@+id/layout_evaluation"
                layout="@layout/layout_item_setting" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="@string/cantact_way"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_666666"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white">

            <include
                android:id="@+id/layout_qq"
                layout="@layout/layout_item_setting" />

            <View
                style="@style/margin_horizontal_line" />

            <include
                android:id="@+id/layout_wechat"
                layout="@layout/layout_item_setting" />

            <View
                style="@style/margin_horizontal_line" />

            <include
                android:id="@+id/layout_phone"
                layout="@layout/layout_item_setting" />

            <View
                style="@style/margin_horizontal_line" />

            <include
                android:id="@+id/layout_email"
                layout="@layout/layout_item_setting" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>