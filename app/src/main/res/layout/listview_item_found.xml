<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_bg_layout_item"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.itheima.roundedimageview.RoundedImageView xmlns:round="http://schemas.android.com/apk/res-auto"
                android:layout_width="@dimen/dp_49"
                android:layout_height="@dimen/dp_49"
                android:adjustViewBounds="true"
                android:src="@drawable/none"
                round:riv_oval="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="这里是用户名字"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dp_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_4"
                    android:layout_alignParentBottom="true"
                    android:text="这里是用户名字"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:text="附近的看过了都放假了看过的福禄寿，你说的，没烦恼吗，你，的什么拿房，美少女，没你说的，麻烦你收到没，发那么，十多年，烦死你地方，没得啥免费收到没，的拿房景点斯诺伐克几点上班南方科技的斯诺伐克纳斯达克烦恼四大皆空福年"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            android:src="@drawable/none"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:text="来自广州"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <View
        style="@style/horizontal_line" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49">

        <LinearLayout
            android:id="@+id/layout_share"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:src="@drawable/ic_launcher"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:layout_marginRight="@dimen/dp_10"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="49"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_666666"/>
        </LinearLayout>

        <View
            style="@style/vertical_line" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:src="@drawable/ic_launcher"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:layout_marginRight="@dimen/dp_10"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="49"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_666666"/>
        </LinearLayout>

        <View
           style="@style/vertical_line" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:src="@drawable/ic_launcher"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:layout_marginRight="@dimen/dp_10"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="49"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_666666"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>