<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dp_15">

        <cn.com.mangopi.android.ui.widget.ListView
            android:id="@+id/lv_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" />

        <include
            android:id="@+id/layout_empty"
            android:visibility="gone"
            layout="@layout/layout_nodata_in_content" />

        <TextView
            android:id="@+id/tv_other_doc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center_horizontal"
            android:textColor="@color/color_333333"
            android:text="查看其他文档"
            android:visibility="gone"
            android:textSize="@dimen/sp_16" />

        <View
            android:id="@+id/line_tutor_comment"
            style="@style/horizontal_line"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_15" />

        <TextView
            android:id="@+id/tv_tutor_comment_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:text="导师点评："
            android:textColor="@color/color_333333"/>

        <TextView
            android:id="@+id/tv_tutor_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"/>

        <View
            android:id="@+id/line_company_comment"
            style="@style/horizontal_line"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_15" />

        <TextView
            android:id="@+id/tv_company_comment_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:text="企业点评："
            android:visibility="gone"
            android:textColor="@color/color_333333"/>

        <TextView
            android:id="@+id/tv_company_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"/>

    </LinearLayout>
</ScrollView>
